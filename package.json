{
  "name": "base-workspace",
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "crates/*",
    "tests/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:crates": "node .scripts/build_crates.js",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,js,md,mdx}\"",
    "lint": "npm run lint:packages && npm run lint:examples",
    "lint:packages": "turbo run lint",
    "lint:examples": "eslint --cache --fix --ext .js examples tests",
    "rome:lint": "rome check ./packages/**/src",
    "prepare": "husky install",
    "test": "npm run test:js && npm run test:crates",
    "test:js": "vitest run",
    "test:crates": "cargo test",
    "pre-push-check": "npm run test"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.1.0",
    "@types/node": "^16.11.58",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "eslint-config-base": "workspace:*",
    "husky": "^7.0.4",
    "prettier": "^2.7.1",
    "turbo": "latest",
    "typescript": "^4.8.2",
    "vitest": "^0.21.1"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "dependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "packageManager": "pnpm@7.9.0",
  "private": true,
  "type": "module"
}
